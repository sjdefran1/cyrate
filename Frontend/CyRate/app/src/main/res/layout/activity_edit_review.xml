<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditReviewActivity">

    <ImageView
        android:id="@+id/back_btn_editReview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/drop_down_icon"
        android:rotation="90"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:letterSpacing=".1"
        android:text="Edit Your Review"
        android:textColor="#AA0606"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/submitReview_editReview"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/checkmark_icon"
        app:layout_constraintStart_toEndOf="@id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="@id/textView"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <ImageView
        android:id="@+id/busImage_addReview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/provisions_hero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:scaleType="fitXY"
        />



    <TextView
        android:id="@+id/busName_addReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provisions Lot F"
        android:textSize="22dp"
        android:fontFamily="@font/sf_pro_medium"
        android:textColor="@color/black"
        android:letterSpacing=".1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/busImage_addReview"
        />

    <TextView
        android:id="@id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEAVE A RATING"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:textColor="@color/red"
        android:fontFamily="@font/sf_pro_reg"
        android:letterSpacing=".1"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/busName_addReview"
        />

    <RatingBar
        android:id="@+id/ratingBar_editReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/RatingGolden"
        android:layout_marginTop="10dp"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REVIEW HEADING"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingBar_editReview"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textColor="@color/red"
        android:fontFamily="@font/sf_pro_reg"
        android:letterSpacing=".1"
        />

    <EditText
        android:id="@+id/reviewHeading_editReview"
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:textSize="10dp"
        android:gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Add a heading for your review!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YOUR REVIEW"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewHeading_editReview"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:textColor="@color/red"
        android:fontFamily="@font/sf_pro_reg"
        android:letterSpacing=".1"
        />

    <EditText
        android:id="@+id/reviewBody_editReview"
        android:layout_width="380dp"
        android:layout_height="190dp"
        android:textSize="14dp"
        android:gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Add your thoughts and experience with this place!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        />



</androidx.constraintlayout.widget.ConstraintLayout>